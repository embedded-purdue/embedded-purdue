---
// Define the image source, write text, align either left or right
import {Image} from 'astro:assets';
const { imageSrc, text, align, linkText, link } = Astro.props;
---
<style>
    .container {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 15px; /* Adjust spacing between image and text */
        max-width: 65rem;
        margin: 0 auto;
        padding: 15px;
        flex-direction: ${alignment === "left" ? 'row' : 'row-reverse'};
    }
    .image {
        max-width: 30rem; /* Adjust image size */
        height: auto;
        border-radius: 8px;
    }
    .text {
        font-size: 2rem;
        text-align: center;
        max-width: 600px;
        color: #FFFFFA;
        ine-height: 1.2;
    }
    .text a {
        text-decoration: underline;
        color: #FFFFFA;
    }
</style>

<div class="container">
    { align === "left" && <Image src={imageSrc} alt="Technical Workbench" class="image" /> }
    <p class="text">
        {text} { link ? <a href={link}>{linkText}</a> : null }
    </p>
    { align === "right" && <Image src={imageSrc} alt="Technical Workbench" class="image" /> }
</div>
